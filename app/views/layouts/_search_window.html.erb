<% if user_signed_in? %>
<p id="notice"><%= notice %></p>
  <div class="search_from text-center">
    <%= form_with url: search_path, method: :get do |f| %>
      <%= f.text_field :content %><%# 検索内容をcontentとしてアクションに送信 %>
      <%= f.select :model, options_for_select([["User"],["Book"]]) %><%# UserかBookを選べるようにして、rangeとしてアクションに送信 %>
      <%# 検索手法を定義 %>
      <%= f.select :method, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
<% end %>